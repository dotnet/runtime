  <!-- Import to have access to properties/items used both during the Arcade phase and in the repo. -->
  <Import Project="$(MSBuildThisFileDirectory)Configurations.props" />

  <ItemGroup>
    <ProjectToBuild Include="$(RepoTasksDir)**\*.csproj"
                    BuildInParallel="false"
                    RestoreInParallel="false"
                    AdditionalProperties="Configuration=Debug;Platform=AnyCPU" />

    <ProjectToBuild Include="$(RepoRoot)Build.proj"
                    BuildInParallel="false"
                    RestoreInParallel="false" />
  </ItemGroup>

</Project>
