	arch/generic/crc32_fold_c.o \
	arch/generic/slide_hash_c.o \
	adler32.o \
	compress.o \
	crc32.o \
	crc32_braid_comb.o \
	deflate.o \
	deflate_fast.o \
	deflate_huff.o \
	deflate_medium.o \
	deflate_quick.o \
	deflate_rle.o \
	deflate_slow.o \
	deflate_stored.o \
	functable.o \
	infback.o \
	inflate.o \
	inftrees.o \
	insert_string.o \
	insert_string_roll.o \
	trees.o \
	uncompr.o \
	zutil.o \
	cpu_features.o \
