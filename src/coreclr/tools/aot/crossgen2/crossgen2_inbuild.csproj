<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <CrossHostArch Condition="'$(CrossBuild)' == 'true' or '$(BuildArchitecture)' != '$(TargetArchitecture)' or '$(HostOS)' != '$(TargetOS)' or '$(EnableNativeSanitizers)' != ''">$(BuildArchitecture)</CrossHostArch>
    <OutputPath>$(RuntimeBinDir)/$(BuildArchitecture)/crossgen2/</OutputPath>
    <UseAppHost>false</UseAppHost>
  </PropertyGroup>
  <Import Project="crossgen2.props" />
</Project>
