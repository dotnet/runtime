<Project>
  <PropertyGroup>
    <MonoAOTCompilerTasksAssemblyPath Condition="'$(MSBuildRuntimeType)' == 'Core'">$(MSBuildThisFileDirectory)..\tools\net6.0\MonoAOTCompiler.dll</MonoAOTCompilerTasksAssemblyPath>
    <MonoAOTCompilerTasksAssemblyPath Condition="'$(MSBuildRuntimeType)' != 'Core'">$(MSBuildThisFileDirectory)..\tools\net472\MonoAOTCompiler.dll</MonoAOTCompilerTasksAssemblyPath>
  </PropertyGroup>
  <UsingTask TaskName="MonoAOTCompiler" AssemblyFile="$(MonoAOTCompilerTasksAssemblyPath)" />
</Project>
