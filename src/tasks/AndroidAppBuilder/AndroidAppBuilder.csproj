<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(NetCoreAppToolCurrent)</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <NoWarn>$(NoWarn),CA1050,CA1850</NoWarn>
    <DefaultExcludesInProjectFolder>$(DefaultExcludesInProjectFolder);Templates\*.*</DefaultExcludesInProjectFolder>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Templates\*.*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MobileBuildTasks\MobileBuildTasks.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Common\AndroidSdkHelper.cs" />
    <Compile Include="..\Common\DexBuilder.cs" />
    <Compile Include="..\Common\JarBuilder.cs" />
    <Compile Include="..\Common\JavaCompiler.cs" />
    <Compile Include="..\Common\Utils.cs" />
  </ItemGroup>

  <Target Name="PublishBuilder"
          AfterTargets="Build"
          DependsOnTargets="Publish" />

  <Target Name="GetFilesToPackage" Returns="@(FilesToPackage)">
    <ItemGroup>
      <FilesToPackage Include="$(OutputPath)$(MSBuildProjectName)*" TargetPath="tasks\$(NetCoreAppToolCurrent)" />
    </ItemGroup>
  </Target>

</Project>
