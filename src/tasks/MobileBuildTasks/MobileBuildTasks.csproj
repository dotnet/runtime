<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(NetCoreAppToolCurrent);$(NetFrameworkToolCurrent)</TargetFrameworks>
    <NoWarn>$(NoWarn),CA1050,CA1850</NoWarn>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFrameworkIdentifier)' == '.NETFramework'">
    <Compile Include="..\Common\IsExternalInit.cs" />
    <Compile Include="$(CoreLibSharedDir)System\Diagnostics\CodeAnalysis\NullableAttributes.cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Common\Utils.cs" />
  </ItemGroup>

  <Target Name="GetFilesToPackage" Returns="@(FilesToPackage)">
    <ItemGroup>
      <!-- .NETCoreApp -->
      <FilesToPackage Include="$(OutputPath)$(NetCoreAppToolCurrent)\$(MSBuildProjectName)*" TargetPath="tasks\$(NetCoreAppToolCurrent)" />

      <!-- For .NETFramework we need all the dependent assemblies too, so copy from the publish folder -->
      <FilesToPackage Include="$(OutputPath)$(NetFrameworkToolCurrent)\*" TargetPath="tasks\$(NetFrameworkToolCurrent)" />
    </ItemGroup>
  </Target>

</Project>