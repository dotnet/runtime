{
  "version": "1.0.0-tool-*",
  "buildOptions": {
    "emitEntryPoint": true,
    "compile": {
      "exclude": [ "tool/**/*" ],
      "include": [ "../../build_projects/Microsoft.DotNet.Cli.Build.Framework/ArgumentEscaper.cs"]
    }
  },
  "dependencies": {
    "Microsoft.NETCore.App": {
      "type": "platform",
      "version": "1.0.0-rc3-004308"
    }
  },

  "packOptions": {
    "files": {
      "mappings":{
        "lib/netcoreapp1.0/tool/": {
          "include": "tool/**/*"
        }
      }
    }
  },

  "frameworks": {
    "netcoreapp1.0": {
      "imports": "dnxcore50"
    }
  }
}
