<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <dotnetDebToolSource>$(ProjectDir)tools-local/setuptools/dotnet-deb-tool/</dotnetDebToolSource>
    <dotnetDebToolPackageSource>$(PackageOutputPath)</dotnetDebToolPackageSource>
    <toolConsumerProjectName>dotnet-deb-tool-consumer.csproj</toolConsumerProjectName>
    <consumingProjectDirectory>$(IntermediateOutputRootPath)$(toolConsumerProjectName)</consumingProjectDirectory>
    <debPackaginfConfigPath>$(PackagingRoot)deb/</debPackaginfConfigPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(BuildUpgradeableLinuxPackages)' == 'true' AND '$(InstallerExtension)' == '.deb'">
    <HostResolverVersion Condition="$(HostResolverVersion.Contains('$(PreReleaseLabel)')) AND $(PreReleaseLabel) !=''">$([System.String]::Copy('$(HostResolverVersion)').Replace('-$(PreReleaseLabel)', '~$(PreReleaseLabel)'))</HostResolverVersion>
    <HostVersion Condition="$(HostVersion.Contains('$(PreReleaseLabel)')) AND $(PreReleaseLabel) !=''">$([System.String]::Copy('$(HostVersion)').Replace('-$(PreReleaseLabel)', '~$(PreReleaseLabel)'))</HostVersion>
    <SharedFrameworkNugetVersion Condition="$(SharedFrameworkNugetVersion.Contains('$(PreReleaseLabel)')) AND $(PreReleaseLabel) !=''">$([System.String]::Copy('$(SharedFrameworkNugetVersion)').Replace('-$(PreReleaseLabel)', '~$(PreReleaseLabel)'))</SharedFrameworkNugetVersion>
    <RuntimeDepsDebVersion Condition="$(RuntimeDepsDebVersion.Contains('$(PreReleaseLabel)')) AND $(PreReleaseLabel) !=''">$([System.String]::Copy('$(RuntimeDepsDebVersion)').Replace('-$(PreReleaseLabel)', '~$(PreReleaseLabel)'))</RuntimeDepsDebVersion>
  </PropertyGroup>
</Project>