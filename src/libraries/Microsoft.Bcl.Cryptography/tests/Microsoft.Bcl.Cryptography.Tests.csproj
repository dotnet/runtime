             Link="Common\System\Memory\PointerMemoryManager.cs" />
    <Compile Include="$(CommonTestPath)System\Security\Cryptography\AesGcmTests.cs"
             Link="CommonTest\System\Security\Cryptography\AesGcmTests.cs" />
