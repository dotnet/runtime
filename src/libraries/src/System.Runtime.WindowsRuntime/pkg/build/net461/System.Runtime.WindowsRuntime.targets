<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Choose>
    <When Condition="'$(DoNotReferenceWinRT)' != 'true'">
      <PropertyGroup>
        <!-- include the reference to System.Runtime -->
        <_HasReferenceToSystemRuntime>true</_HasReferenceToSystemRuntime>
        <!-- required for net461 and net70 support -->
        <DependsOnNETStandard>true</DependsOnNETStandard>
      </PropertyGroup>
      <ItemGroup>
        <ReferencePath Include="$(MSBuildThisFileDirectory)..\..\ref\netstandard2.0\System.Runtime.WindowsRuntime.dll">
          <!-- Private = false to make these reference only -->
          <Private>false</Private>
          <!-- hide these from Assemblies view in Solution Explorer, they will be shown under packages -->
          <Visible>false</Visible>
        </ReferencePath>
      </ItemGroup>
    </When>
  </Choose>
</Project>
