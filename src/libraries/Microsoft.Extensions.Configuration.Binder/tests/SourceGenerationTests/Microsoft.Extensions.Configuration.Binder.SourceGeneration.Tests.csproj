    <Content Include="Baselines\netcoreapp\ConfigurationBinder\GetValue_TypeOf_Key_DefaultValue.generated.txt" />
    <Content Include="Baselines\netcoreapp\ConfigurationBinder\GetValue_T_Key.generated.txt" />
