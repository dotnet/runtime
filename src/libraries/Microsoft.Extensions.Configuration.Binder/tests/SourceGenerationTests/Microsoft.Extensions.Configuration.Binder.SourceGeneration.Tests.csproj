    <Content Include="Baselines\netcoreapp\ConfigurationBinder\Get_TypeOf.generated.txt" />
    <Content Include="Baselines\netcoreapp\ConfigurationBinder\Get_TypeOf_BinderOptions.generated.txt" />
    <Content Include="Baselines\netcoreapp\ConfigurationBinder\Get_T_BinderOptions.generated.txt" />
