    <Content Include="Baselines\netcoreapp\ConfigurationBinder\Bind_Instance_BinderOptions.generated.txt" />
    <Content Include="Baselines\netcoreapp\ConfigurationBinder\Bind_Key_Instance.generated.txt" />
    <Content Include="Baselines\netcoreapp\ConfigurationBinder\Get.generated.txt" />
    <Content Include="Baselines\netcoreapp\ConfigurationBinder\GetValue.generated.txt" />
