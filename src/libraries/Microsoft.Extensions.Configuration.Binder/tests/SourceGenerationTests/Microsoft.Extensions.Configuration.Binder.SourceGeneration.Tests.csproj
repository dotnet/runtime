    <Content Include="Baselines\net462\ConfigurationBinder\Get_TypeOf_BinderOptions.generated.txt" />
    <Content Include="Baselines\net462\ConfigurationBinder\Get_T_BinderOptions.generated.txt" />
    <Content Include="Baselines\net462\OptionsBuilder\BindConfiguration.generated.txt" />
    <Content Include="Baselines\net462\OptionsBuilder\Bind_T.generated.txt" />
    <Content Include="Baselines\net462\OptionsBuilder\Bind_T_BinderOptions.generated.txt" />
    <Content Include="Baselines\net462\ServiceCollection\Configure_T.generated.txt" />
