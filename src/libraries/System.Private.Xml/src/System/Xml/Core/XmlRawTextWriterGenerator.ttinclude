        // Entitize '\t' as "&#x9;".  Return an updated pointer.

        protected static unsafe <#= BufferType #>* TabEntity(<#= BufferType #>* pDst)
        {
            pDst[0] = (<#= BufferType #>)'&';
            pDst[1] = (<#= BufferType #>)'#';
            pDst[2] = (<#= BufferType #>)'x';
            pDst[3] = (<#= BufferType #>)'9';
            pDst[4] = (<#= BufferType #>)';';
            return pDst + 5;
