        // Entitize 0xa as "&#xA;".  Return an updated pointer.

        protected static unsafe <#= BufferType #>* LineFeedEntity(<#= BufferType #>* pDst)
        {
            pDst[0] = (<#= BufferType #>)'&';
            pDst[1] = (<#= BufferType #>)'#';
            pDst[2] = (<#= BufferType #>)'x';
            pDst[3] = (<#= BufferType #>)'A';
            pDst[4] = (<#= BufferType #>)';';
            return pDst + 5;
