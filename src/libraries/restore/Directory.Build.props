<Project>
  <Import Project="..\Directory.Build.props" />

  <PropertyGroup>
    <!-- let us control the output path -->
    <OutputPath>$(BaseOutputPath)$(TargetFramework)-$(ConfigurationGroup)</OutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    <AdditionalBuildTargetFrameworks>netstandard2.0-$(OSGroup)</AdditionalBuildTargetFrameworks>
  </PropertyGroup>
  
  <!-- don't bring in props/targets from packages, we're not consuming them we're
       deploying them -->
  <ItemDefinitionGroup>
    <PackageReference>
      <ExcludeAssets>Build</ExcludeAssets>
    </PackageReference>
  </ItemDefinitionGroup>
</Project>