    <Compile Include="Regex.Replace.Tests.cs" />
    <Compile Include="Regex.Split.Tests.cs" />
    <Compile Include="Regex.Tests.Common.cs" />
    <Compile Include="Regex.UnicodeChar.Tests.cs" />
    <Compile Include="RegexCharacterSetTests.cs" />
