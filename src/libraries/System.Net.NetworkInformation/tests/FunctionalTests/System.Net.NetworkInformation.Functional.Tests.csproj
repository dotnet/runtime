    <Compile Include="$(CommonPath)System\IO\RowConfigReader.cs"
             Link="Common\System\IO\RowConfigReader.cs" />
    <Compile Include="$(CommonPath)System\HexConverter.cs"
             Link="Common\System\HexConverter.cs" />
