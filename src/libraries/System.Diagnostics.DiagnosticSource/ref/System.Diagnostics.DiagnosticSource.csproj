<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard1.1;netstandard1.3;net45;;netstandard2.0;$(NetFrameworkCurrent);</TargetFrameworks>
    <ExcludeTargetFrameworksFromPackages>netstandard2.0;$(NetFrameworkCurrent);</ExcludeTargetFrameworksFromPackages>
    <CLSCompliant>false</CLSCompliant>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <PropertyGroup Condition="'$(OriginalTargetFramework)' == 'net45' or '$(OriginalTargetFramework)' == '$(NetFrameworkCurrent)'">
    <DefineConstants>$(DefineConstants);ALLOW_PARTIALLY_TRUSTED_CALLERS</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="System.Diagnostics.DiagnosticSource.cs" />
  </ItemGroup>
  <ItemGroup Condition="'$(OriginalTargetFramework)' != 'netstandard1.1'">
    <Compile Include="System.Diagnostics.DiagnosticSourceActivity.cs" />
    <Reference Include="System.Memory" />
  </ItemGroup>
  <ItemGroup Condition="'$(OriginalTargetFramework)' == 'net45' or '$(OriginalTargetFramework)' == '$(NetFrameworkCurrent)'">
    <Reference Include="mscorlib" />
  </ItemGroup>

  <ItemGroup Condition="'$(OriginalTargetFramework)' == 'net45'">
    <Reference Include="System.Runtime" />
  </ItemGroup>
  <ItemGroup Condition="'$(OriginalTargetFramework)' == '$(NetFrameworkCurrent)'">
    <Reference Include="netstandard" />
  </ItemGroup>

  <ItemGroup Condition="'$(OriginalTargetFramework)' == 'netstandard1.1' or '$(OriginalTargetFramework)' == 'netstandard1.3'">
    <Reference Include="System.Runtime.InteropServices" />
    <Reference Include="System.Runtime" />
  </ItemGroup>
</Project>