             Link="Common\Interop\Windows\Kernel32\Interop.FreeLibrary.cs" />
    <Compile Include="$(CommonPath)Interop\Windows\Kernel32\Interop.LoadLibraryEx.cs"
             Link="Common\Interop\Windows\Kernel32\Interop.LoadLibraryEx.cs" />
