    <TargetFrameworks>$(NetCoreAppCurrent)-Windows_NT;$(NetFrameworkCurrent)-Windows_NT</TargetFrameworks>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="ProtectedDataTests.cs" />
