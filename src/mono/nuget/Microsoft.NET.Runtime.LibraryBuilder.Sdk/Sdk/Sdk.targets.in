<Project>
  <!-- Property overrides -->
  <PropertyGroup>
    <_TasksDir Condition="'$(MSBuildRuntimeType)' == 'Core'">$(MSBuildThisFileDirectory)..\tasks\${TargetFrameworkForNETCoreTasks}\</_TasksDir>
    <_TasksDir Condition="'$(MSBuildRuntimeType)' != 'Core'">$(MSBuildThisFileDirectory)..\tasks\${TargetFrameworkForNETFrameworkTasks}\</_TasksDir>

    <GenerateAppBundle>false</GenerateAppBundle>
    <NativeLib Condition="'$(NativeLib)' == ''">shared</NativeLib>

    <AndroidAppBuilderTasksAssemblyPath Condition="'$(TargetsAndroid)' == 'true'">$(_TasksDir)AndroidAppBuilder.dll</AndroidAppBuilderTasksAssemblyPath>
    <AppleAppBuilderTasksAssemblyPath Condition="'$(TargetsAppleMobile)' == 'true'">$(_TasksDir)AppleAppBuilder.dll</AppleAppBuilderTasksAssemblyPath>
    <LibraryBuilderTasksAssemblyPath>$(_TasksDir)LibraryBuilder.dll</LibraryBuilderTasksAssemblyPath>
  </PropertyGroup>

  <Import Project="$(MSBuildThisFileDirectory)\LibraryBuilder.props" />
  <Import Condition="'$(TargetsAndroid)' == 'true'" Project="$(MSBuildThisFileDirectory)\AndroidApp.props" />
  <Import Condition="'$(TargetsAppleMobile)' == 'true'" Project="$(MSBuildThisFileDirectory)\AppleApp.props" />
  
  <Import Project="$(MSBuildThisFileDirectory)\LibraryBuilder.targets" />
  <Import Condition="'$(TargetsAndroid)' == 'true'" Project="$(MSBuildThisFileDirectory)\AndroidApp.targets" />
  <Import Condition="'$(TargetsAppleMobile)' == 'true'" Project="$(MSBuildThisFileDirectory)\AppleApp.targets" />
</Project>
