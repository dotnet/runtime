<Project>
  <PropertyGroup>
    <RuntimeConfigParserTasksAssemblyPath Condition="'$(MSBuildRuntimeType)' == 'core'">$(MSBuildThisFileDirectory)..\tools\net6.0\RuntimeConfigParser.dll</RuntimeConfigParserTasksAssemblyPath>
    <RuntimeConfigParserTasksAssemblyPath Condition="'$(MSBuildRuntimeType)' != 'core'">$(MSBuildThisFileDirectory)..\tools\net472\RuntimeConfigParser.dll</RuntimeConfigParserTasksAssemblyPath>
  </PropertyGroup>

  <UsingTask TaskName="RuntimeConfigParserTask" AssemblyFile="$(RuntimeConfigParserTasksAssemblyPath)" />
</Project>
