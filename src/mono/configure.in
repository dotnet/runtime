	s390x-*-linux*)
		TARGET=S390X;
		arch_target=s390x;
		ACCESS_UNALIGNED="yes"
		JIT_SUPPORTED=yes
		sgen_supported=true
		CFLAGS="$CFLAGS -mbackchain -D__USE_STRING_INLINES"
