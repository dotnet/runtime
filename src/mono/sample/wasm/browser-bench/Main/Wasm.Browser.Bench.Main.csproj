<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>$(NetCoreAppCurrent)</TargetFramework>
    <!-- don't need to run this on helix -->
    <WasmCopyAppZipToHelixTestDir>false</WasmCopyAppZipToHelixTestDir>
    <WasmMainJSPath>main.js</WasmMainJSPath>
    <SuppressTrimAnalysisWarnings>true</SuppressTrimAnalysisWarnings>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Common\Wasm.Bench.Common.csproj" />
    <ProjectReference Include="..\Frame\Wasm.Browser.Bench.Frame.csproj" />
  </ItemGroup>

  <ItemGroup>
    <WasmExtraFilesToDeploy Include="index.html" />
    <WasmExtraFilesToDeploy Include="..\Frame\appstart-frame.html" />
    <WasmExtraFilesToDeploy Include="..\Frame\frame-main.js" />
    <WasmExtraFilesToDeploy Include="style.css" />
  </ItemGroup>

  <PropertyGroup>
    <_SampleProject>Wasm.Browser.Bench.Main.csproj</_SampleProject>
    <_SampleAssembly> Wasm.Browser.Bench.Main.dll</_SampleAssembly>
  </PropertyGroup>

  <Target Name="RunSample" DependsOnTargets="RunSampleWithBrowserAndSimpleServer" />

</Project>
