<Project Sdk="Microsoft.NET.Sdk">
  <UsingTask TaskName="Microsoft.WebAssembly.Build.Tasks.RunWithEmSdkEnv" AssemblyFile="$(WasmAppBuilderTasksAssemblyPath)" />

  <PropertyGroup>
    <WasmMainJSPath>bin/main.js</WasmMainJSPath>
    <WasmGenerateRunV8Script>true</WasmGenerateRunV8Script>
    <Configuration>Debug</Configuration>
    <WasmCopyAppZipToHelixTestDir Condition="'$(ArchiveTests)' == 'true'">true</WasmCopyAppZipToHelixTestDir>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>embedded</DebugType>
    <WasmDebugLevel>1</WasmDebugLevel>
    <WasmEnableES6>true</WasmEnableES6>
    <WasmBuildAppDependsOn>
      CompileTypeScript;
      $(WasmBuildAppDependsOn)
    </WasmBuildAppDependsOn>
  </PropertyGroup>

  <ItemGroup>
    <WasmExtraFilesToDeploy Include="package.json" />
  </ItemGroup>

  <PropertyGroup>
    <_SampleProject>Wasm.Console.TypeScript.Sample.csproj</_SampleProject>
    <_SampleAssembly>Wasm.Console.TypeScript.Sample.dll</_SampleAssembly>
  </PropertyGroup>

  <Target Name="CompileTypeScript">
    <RunWithEmSdkEnv Command="npm install" EmSdkPath="$(EMSDK_PATH)" IgnoreStandardErrorWarningFormat="true" WorkingDirectory="$(MonoProjectRoot)sample/wasm/console-ts/"/>
    <RunWithEmSdkEnv Command="npm run build" EmSdkPath="$(EMSDK_PATH)" IgnoreStandardErrorWarningFormat="true" WorkingDirectory="$(MonoProjectRoot)sample/wasm/console-ts/"/>
  </Target>

  <Target Name="RunSample" DependsOnTargets="RunSampleWithNode" />
</Project>
