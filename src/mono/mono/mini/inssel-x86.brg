static int
alu_reg_to_alu_imm (int op)
{
	switch (op) {
	case CEE_ADD:
		return OP_ADD_IMM;
	case CEE_SUB:
		return OP_SUB_IMM;
	case CEE_AND:
		return OP_AND_IMM;
	case CEE_OR:
		return OP_OR_IMM;
	case CEE_XOR:
		return OP_XOR_IMM;
	default:
		g_assert_not_reached ();
	}
	return -1;
}

static int
alu_reg_to_alu_membase_imm (int op)
{
	switch (op) {
	case CEE_ADD:
		return OP_X86_ADD_MEMBASE_IMM;
	case CEE_SUB:
		return OP_X86_SUB_MEMBASE_IMM;
	case CEE_AND:
		return OP_X86_AND_MEMBASE_IMM;
	case CEE_OR:
		return OP_X86_OR_MEMBASE_IMM;
	case CEE_XOR:
		return OP_X86_XOR_MEMBASE_IMM;
	default:
		g_assert_not_reached ();
	}
	return -1;
}

static int
call_reg_to_call_membase (int opcode)
{
	switch (opcode) {
	case OP_CALL_REG:
		return OP_CALL_MEMBASE;
	case OP_FCALL_REG:
		return OP_FCALL_MEMBASE;
	case OP_VCALL_REG:
		return OP_VCALL_MEMBASE;
	case OP_LCALL_REG:
		return OP_LCALL_MEMBASE;
	case OP_VOIDCALL_REG:
		return OP_VOIDCALL_MEMBASE;
	default:
		g_assert_not_reached ();
	}

	return -1;
}
