<Project DefaultTargets="Build">
  <Import Project="$([MSBuild]::GetPathOfFileAbove(Directory.Build.props))" />

  <PropertyGroup>
    <PackageDescription>Provides the MonoAOTCompiler task</PackageDescription>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="$(RepoTasksDir)AotCompilerTask\MonoAOTCompiler.csproj" />
  </ItemGroup>

  <ItemGroup>
    <_AOTCompilerTaskFile Include="$(MonoAOTCompilerTasksAssemblyPath)" />
    <_SDKPropsFile Include="Sdk\Sdk.props" />

    <PackageFile Include="@(_AOTCompilerTaskFile)" TargetPath="tools\$(NetCoreAppToolCurrent)\" />
    <PackageFile Include="@(_SDKPropsFile)" TargetPath="Sdk" />
  </ItemGroup>

  <Import Project="$([MSBuild]::GetPathOfFileAbove(Directory.Build.targets))" />
</Project>