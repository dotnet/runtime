<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>$(AspNetCoreAppCurrent)</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RunAnalyzers>false</RunAnalyzers>
    <IsTestProject>true</IsTestProject>
    <WasmCopyAppZipToHelixTestDir Condition="'$(ArchiveTests)' == 'true'">true</WasmCopyAppZipToHelixTestDir>
    <IsWasmDebuggerTestsProject>true</IsWasmDebuggerTestsProject>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="appsettings.json" CopyToOutputDirectory="PreserveNewest" />

    <Compile Include="..\BrowserDebugProxy\DevToolsQueue.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BrowserDebugHost\BrowserDebugHost.csproj" />
    <ProjectReference Include="..\BrowserDebugProxy\BrowserDebugProxy.csproj" />
    <ProjectReference Include="$(RepoRoot)src\libraries\Wasm.Debugger\tests\debugger-test\DebuggerTestApp.Tests.csproj" ReferenceOutputAssembly="false" />
  </ItemGroup>

  <Target Name="CopyAppZipToHelixTestDir"
          Condition="'$(ArchiveTests)' == 'true'"
          AfterTargets="Build"
          DependsOnTargets="Publish">
    <PropertyGroup>
      <WasmHelixTestAppRelativeDir Condition="'$(WasmHelixTestAppRelativeDir)' == ''">$(MSBuildProjectName)</WasmHelixTestAppRelativeDir>
      <!-- Helix properties -->
      <!-- AnyCPU as Platform-->
      <OSPlatformConfig>$(TargetOS).AnyCPU.$(Configuration)</OSPlatformConfig>
      <HelixArchiveRoot>$(ArtifactsDir)helix/</HelixArchiveRoot>
      <HelixArchiveRunOnlyRoot>$(HelixArchiveRoot)tests/</HelixArchiveRunOnlyRoot>
      <HelixArchiveRunOnlyAppsDir>$(HelixArchiveRunOnlyRoot)$(OSPlatformConfig)/$(WasmHelixTestAppRelativeDir)/</HelixArchiveRunOnlyAppsDir>
      <ZippedApp>$(OutputPath)$(AssemblyName).zip</ZippedApp>
      <_TmpDirForzip>$(IntermediateOutputPath)tmp-zip\</_TmpDirForzip>
    </PropertyGroup>

    <ItemGroup>
        <TestSuiteFile Include="$(OutDir)\**" Exclude="$(OutDir)\publish\**" />
        <DebuggerTestFile Include="$(OutDir)\..\..\..\debugger-test\Debug\publish\**" />
    </ItemGroup>

    <Message Text="@(DeployFile)" />
    <MakeDir Directories="$(_TmpDirForzip)" />

    <Copy SourceFiles="@(TestSuiteFile)" DestinationFiles="@(TestSuiteFile->'$(_TmpDirForzip)DebuggerTestSuite\%(RecursiveDir)%(FileName)%(Extension)')" />
    <Copy SourceFiles="@(DebuggerTestFile)" DestinationFiles="@(DebuggerTestFile->'$(_TmpDirForzip)debugger-test\%(RecursiveDir)%(FileName)%(Extension)')" />

    <WriteLinesToFile
      Lines="find $DOTNET_ROOT; find . ; cd DebuggerTestSuite; dotnet exec --runtimeconfig DebuggerTestSuite.runtimeconfig.json xunit.console.dll DebuggerTestSuite.dll"
      File="$(_TmpDirForzip)\RunTests.sh" />

    <ZipDirectory SourceDirectory="$(_TmpDirForzip)" DestinationFile="$(ZippedApp)" Overwrite="true" />
    <Copy SourceFiles="$(ZippedApp)" DestinationFolder="$(HelixArchiveRunOnlyAppsDir)" />
  </Target>
</Project>
