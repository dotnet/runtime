<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <CustomNativeMain>true</CustomNativeMain>
    <StaticLibraryPrefix Condition="'$(TargetOS)' != 'windows'">lib</StaticLibraryPrefix>
    <!-- Doesn't support cross-compilation: https://github.com/dotnet/runtime/issues/82320 -->
    <NativeAotIncompatible Condition="'$(TargetArchitecture)' == 'arm64' and '$(TargetOS)' != 'windows'">true</NativeAotIncompatible>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="CustomMain.cs" />
  </ItemGroup>

  <ItemGroup>
    <CMakeProjectReference Include="CMakeLists.txt" />
  </ItemGroup>

  <ItemGroup>
    <NativeLibrary Include="$(OutputPath)$(StaticLibraryPrefix)CustomMainNative$(LibFileExt)" />
  </ItemGroup>
</Project>
