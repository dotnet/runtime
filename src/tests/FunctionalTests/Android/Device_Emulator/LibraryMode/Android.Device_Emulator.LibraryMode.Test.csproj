<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <ForceLibraryModeGenerateAppBundle>true</ForceLibraryModeGenerateAppBundle>
    <MonoForceInterpreter>false</MonoForceInterpreter>
    <RunAOTCompilation>true</RunAOTCompilation>
    <ForceFullAOT>true</ForceFullAOT>
    <NativeLib>shared</NativeLib>
    <TestRuntime>true</TestRuntime>
    <TargetFramework>$(NetCoreAppCurrent)</TargetFramework>
    <MainLibraryFileName>Android.Device_Emulator.LibraryMode.Test.dll</MainLibraryFileName>
    <ExpectedExitCode>42</ExpectedExitCode>
    <EnableAggressiveTrimming>true</EnableAggressiveTrimming>
    <MonoEnableLLVM>true</MonoEnableLLVM>
  </PropertyGroup>

  <ItemGroup>
    <!-- Preserves the UnmanagedCallersOnly method -->
    <TrimmerRootDescriptor Include="$(MSBuildThisFileDirectory)ILLink.Descriptors.xml" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="Program.cs" />
  </ItemGroup>
</Project>
