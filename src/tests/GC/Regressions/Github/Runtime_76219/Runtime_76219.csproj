<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <Optimize>True</Optimize>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="$(MSBuildProjectName).cs" />

    <!-- This test needs GCStress mode but it doesn't take long to execute
         so is fine to keep it in the inner loop -->
    <CLRTestEnvironmentVariable Include="DOTNET_TieredCompilation" Value="0" />
    <CLRTestEnvironmentVariable Include="DOTNET_GCStress" Value="0x3" />
    <CLRTestEnvironmentVariable Include="DOTNET_COMPlus_GCSegmentSize" Value="8000" />
  </ItemGroup>
</Project>
