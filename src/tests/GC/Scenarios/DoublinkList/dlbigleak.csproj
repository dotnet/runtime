<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <!-- Needed for GCStressIncompatible, GC.WaitForPendingFinalizers -->
    <RequiresProcessIsolation>true</RequiresProcessIsolation>

    <!-- Test needs explicit Main as it uses command-line parameters -->
    <ReferenceXUnitWrapperGenerator>false</ReferenceXUnitWrapperGenerator>

    <GCStressIncompatible>true</GCStressIncompatible>
    <CLRTestPriority>1</CLRTestPriority>
    <!-- Precise GC not supported on Mono -->
    <CLRTestTargetUnsupported Condition="'$(RuntimeFlavor)' == 'mono'">true</CLRTestTargetUnsupported>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="dlbigleak.cs" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="$(TestLibraryProjectPath)" />
  </ItemGroup>
</Project>
